{
  "type": "system/SIMOS/Blueprint",
  "extends": ["system/SIMOS/DefaultUiRecipes","system/SIMOS/NamedEntity"],
  "name": "UiRecipe",
  "description": "This describes ui recipe",
  "attributes": [
    {
      "name": "plugin",
      "attributeType": "string",
      "type": "system/SIMOS/BlueprintAttribute",
      "optional": true,
      "default": "",
      "enumType": "DMT-DS/DMT/plugins/ui/UiPluginsEnum"
    },
    {
      "name": "field",
      "attributeType": "string",
      "type": "system/SIMOS/BlueprintAttribute",
      "optional": true,
      "default": ""
    },
    {
      "name": "hideTab",
      "attributeType": "boolean",
      "type": "system/SIMOS/BlueprintAttribute",
      "optional": true,
      "default": "false"
    },
    {
      "name": "options",
      "type": "system/SIMOS/BlueprintAttribute",
      "attributeType": "system/SIMOS/UiAttributeOption",
      "dimensions": "*",
      "contained": true,
      "optional": true
    },
    {
      "name": "attributes",
      "type": "system/SIMOS/BlueprintAttribute",
      "attributeType": "system/SIMOS/UiAttribute",
      "dimensions": "*",
      "optional": true,
      "contained": true
    }
  ],
  "uiRecipes": [
    {
      "type": "system/SIMOS/UiRecipe",
      "name": "INDEX",
      "description": "",
      "plugin": "INDEX",
      "attributes": [
        {
          "name": "attributes",
          "type": "system/SIMOS/UiAttribute",
          "dimensions": "*",
          "contained": false
        },
        {
          "name": "options",
          "type": "system/SIMOS/UiAttribute",
          "dimensions": "*",
          "contained": false
        }
      ]
    },
    {
      "name": "Edit",
      "type": "system/SIMOS/UiRecipe",
      "plugin": "default-form",
      "attributes": [
        {
          "name": "name",
          "type": "system/SIMOS/UiAttribute",
          "required": true,
          "description": "Name of ui view (tab). Override or create new tab. \"Preview\" | \"Edit\""
        },
        {
          "name": "type",
          "type": "system/SIMOS/UiAttribute",
          "description": "system/SIMOS/UiRecipe",
          "required": true,
          "disabled": true
        },
        {
          "name": "plugin",
          "type": "system/SIMOS/UiAttribute",
          "description": "PREVIEW | EDIT_PLUGIN | INDEX"
        },
        {
          "name": "options",
          "type": "system/SIMOS/UiAttributeOption",
          "dimensions": "*",
          "field": "hidden"
        },
        {
          "name": "field",
          "type": "system/SIMOS/UiAttribute",
          "widget": "hidden"
        },
        {
          "name": "description",
          "type": "system/SIMOS/UiAttribute",
          "widget": "textarea"
        },
        {
          "name": "field",
          "type": "system/SIMOS/UiAttribute",
          "description": "Supported: \"attribute\" | \"hidden\" (also arrays)"
        }
      ]
    }
  ],
  "storageRecipes": []
}
