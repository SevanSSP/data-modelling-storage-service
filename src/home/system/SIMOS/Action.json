{
  "type": "system/SIMOS/Blueprint",
  "extends": ["system/SIMOS/NamedEntity"],
  "name": "Action",
  "description": "This describes an action",
  "attributes": [
    {
      "name": "actionType",
      "attributeType": "string",
      "type": "system/SIMOS/BlueprintAttribute",
      "enumType": "system/SIMOS/enums/ActionTypes",
      "default": "resultInEntity",
      "optional": true,
      "description": "The type of the action."
    },
    {
      "attributeType": "string",
      "type": "system/SIMOS/BlueprintAttribute",
      "name": "input",
      "label": "Input",
      "description": "Reference to a Blueprint (Path without Datasource prefix)."
    },
    {
      "attributeType": "string",
      "type": "system/SIMOS/BlueprintAttribute",
      "name": "output",
      "label": "Output",
      "description": "Reference to a Blueprint (Path without Datasource prefix)."
    },
    {
      "attributeType": "string",
      "type": "system/SIMOS/BlueprintAttribute",
      "name": "method",
      "description": "What method to call inside runnable.tsx"
    }
  ],
  "storageRecipes": [],
  "uiRecipes": [
    {
      "type": "system/SIMOS/UiRecipe",
      "name": "Edit",
      "plugin": "default-form",
      "attributes": [
        {
          "name": "type",
          "type": "system/SIMOS/UiAttribute",
          "disabled": true
        },
        {
          "name": "input",
          "type": "system/SIMOS/UiAttribute",
          "field": "blueprint"
        },
        {
          "name": "output",
          "type": "system/SIMOS/UiAttribute",
          "field": "blueprint"
        }
      ]
    }
  ]
}
