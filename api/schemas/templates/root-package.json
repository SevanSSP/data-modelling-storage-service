{
  "title": "Root Package",
  "description": "Contains models and other packages",
  "type": "object",
  "required": ["name"],
  "properties": {
    "name": {
      "type": "string",
      "title": "Name",
      "default": ""
    },
    "description": {
      "type": "string",
      "title": "Description",
      "default": ""
    },
    "version": {
      "type": "string",
      "title": "Version"
    },
    "subpackages": {
      "type": "array",
      "title": "List of sub packages",
      "default": [],
      "items": {
        "type": "string"
      }
    },
    "models": {
      "type": "array",
      "title": "List of models",
      "items": {
        "type": "string"
      }
    },
    "dependencies": {
      "type": "array",
      "title": "Depended packages",
      "items": {
        "type": "string"
      }
    }
  }
}
