{
  "meta": {
    "name": "package-request"
  },
  "schema": {
    "required": ["formData", "meta", "nodeType", "parentId"],
    "title": "PackageRequestForm",
    "description": "Used to POST and PUT packages",
    "type": "object",
    "properties": {
      "formData": {
        "type": "object"
      },
      "meta": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "templateRef": {
            "type": "string"
          }
        },
        "required": ["name", "templateRef"]
      },
      "nodeType": {
        "type": "string",
        "enum": ["root-package", "version", "subpackage", "file"]
      },
      "parentId": {
        "type": "string"
      }
    }
  }
}