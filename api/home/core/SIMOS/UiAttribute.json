{
  "type": "system/SIMOS/Blueprint",
  "name": "UiAttribute",
  "description": "This describes an ui recipe attribute",
  "attributes": [
    {
      "type": "string",
      "name": "name"
    },
    {
      "type": "string",
      "name": "description",
      "optional": true,
      "default": ""
    },
    {
      "type": "string",
      "name": "uiRecipe",
      "default": "",
      "optional": true
    },
    {
      "type": "boolean",
      "name": "optional",
      "optional": true,
      "default": false
    },
    {
      "type": "string",
      "name": "type"
    },
    {
      "type": "string",
      "name": "field",
      "optional": true,
      "default": ""
    },
    {
      "type": "string",
      "name": "dimensions",
      "optional": true,
      "default": "1"
    },
    {
      "type": "string",
      "name": "default",
      "optional": true,
      "default": ""
    },
    {
      "type": "boolean",
      "name": "contained",
      "optional": true,
      "default": true
    },
    {
      "type": "string",
      "name": "widget",
      "description": "Widget for this property",
      "optional": true,
      "default": ""
    },
    {
      "type": "system/SIMOS/UiAttributeOption",
      "name": "options",
      "dimensions": "*",
      "contained": true,
      "optional": true
    },
    {
      "type": "boolean",
      "name": "disabled",
      "default": false,
      "optional": true
    }
  ],
  "uiRecipes": [
    {
      "plugin": "EDIT_PLUGIN",
      "name": "Edit",
      "type": "system/SIMOS/UiRecipe",
      "attributes": [
        {
          "name": "type",
          "type": "string",
          "field": "hidden"
        }
      ]
    }
  ]
}
